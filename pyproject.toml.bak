[project]
name = "cloudoll"
version = "3.0.12"
authors = [
  { name="Qiu", email="smallerqiu@gmail.com" },
]
description = "Assist in quickly creating distributable microservices based on aiohttp, with a focus on simplicity and ease of use."
readme = "README.md"
requires-python = ">=3.6"
license="MIT"
classifiers = [
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.6",
    "Programming Language :: Python :: Implementation :: CPython",
    "Programming Language :: Python :: Implementation :: PyPy",
]
include_package_data=true

install_requires=[
    "requests",
    "colorlog",
    "aiomysql",
    "aiopg",
    "aiohttp",
    "redis[hiredis]",
    "aiomcache",
    "jinja2",
    "pyjwt",
    "aiohttp_session[secure]",
    "PyYAML",
    "click"
]
[project.urls]
Homepage = "https://github.com/smallerqiu/cloudoll-py"
Issues = "https://github.com/smallerqiu/cloudoll-py/issues"